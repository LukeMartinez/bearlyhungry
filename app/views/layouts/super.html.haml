%html.no-js{lang: "en"}
  / <![endif]
  %head
    %meta{charset: "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{content: "width=device-width", name: "viewport"}/
    %title Admin | What The Pho
    = stylesheet_link_tag    "admin"
    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300", rel: "stylesheet", type: "text/css"}/
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.admin
    .admin-header.show-for-small.row
      .twelve.columns
        %nav.top-bar
          %ul
            %li.name
              %h1
                %a.logo{href: "/"}
                  Admin Dashboard
          %section
            %ul.right
              %li.divider.show-for-medium-and-up
              %li.has-dropdown
                %a{href: "#"}= current_user.full_name
                %ul.dropdown
                  %li
                    %label Admin Dashboard
                  %li
                    %a{href: "/admin/restaurants"} Restaurants
                  %li
                    %a{href: "/admin/items"} Items
                  %li
                    %a{href: "/admin/users"} Users
                  %li
                    %a{href: "/admin/orders"} Orders
                  %li.divider
                  %li
                    %a{href: "#"}= link_to "Logout", logout_path
    .row
      %nav.sidebar.two.columns.show-for-large-and-up
        %ul
          %li
            %a{href: "#{super_root_path}"}
              Dashboard
          %li
            %a{href: "#{super_restaurants_path}"}
              Restaurants
      .content.ten.columns
        = yield
